main#art_inner-home.art_inner.art_inner--home

    .art_container
        .art_inner__wrapper.art_inner__wrapper--home
          section.art_inner__content.art_inner__content--home.art_inner-content  .art_inner-content





          aside.art_inner__vidget.art_inner__vidget--home.art_vidget-home
            section.art_vidget-home__massages.art_board.art_home-massages 
              .art_home-massages__top.art_title-top Важные сообщения
              
              .art_home-massages__slider.art-massages-slider
                .slider__slider.slider
                        .slider__arrows.slider__arrows--massages
                            i.slider__arrow--massages.slider__arrow_prev.slider__arrow_prev--massages.icon-chevron-left
                            i.slider__arrow--massages.slider__arrow_next.slider__arrow_next--massages.icon-chevron-right
                        ul.slider__body.slider-massages-js-1
                          - 
                            slides = [
                                {  img:"./assets/img/slider/img-1.webp"},
                                {  img:"./assets/img/slider/img-2.webp"},
                                {  img:"./assets/img/slider/img-3.webp"},
                                {  img:"./assets/img/slider/img-4.webp"},
                                {  img:"./assets/img/slider/img-5.webp"},
                            ]
                          each item in slides
                            li.slider__item.slider__item--massages
                                img.art-massages-slider__img(src="assets/img/home/img-1.webp",alt="img")
                                .art_decor.art_decor--massages
                                .art-massages-slider__title Надежда Пронина
                                .art-massages-slider__text  Текст сообщения от пользователя в несколько строк
                                button.btn.btn--empty(type='button').art-massages-slider__button  Прочитано
            section.art_vidget-home__birthday.art_board.art_home-birthday
              .art_home-birthday__top.art_title-top Дни рождения
              ul.art_home-birthday__items
                .art_home-birthday__item.art_home-birthday__item--active
                                img.art_home-birthday__img(src="assets/img/home/img-1.webp",alt="img")
                                .art_home-birthday__title Иван Петров
                                .art_home-birthday__text  Сегодня
                                
                                .art_home-birthday__img--birthday
                                  img(src="assets/img/home/img-2.svg",alt="img")
                - 
                    items = [
                      { title: " Дмитрий Пискарев", text: "23 Февраля 2020"},
                      { title: " Андрей Истомин", text: "2 Марта 2020"},
                      { title: " Александр Нурма", text: "22 Марта 2020"},
                      { title: " Надежда Михой", text: "12 Января 2020"},
                    ]
                
                each item in items
                  .art_home-birthday__item
                                img.art_home-birthday__img(src="assets/img/home/img-1.webp",alt="img")
                                .art_home-birthday__title=item.title
                                .art_home-birthday__text=item.text   
                                .art_home-birthday__img--birthday
                                  img(src="assets/img/home/img-2.svg",alt="img")
              
              .art_decor.art_decor--birthday
              button.btn.btn--empty(type='button').art_home-birthday__button  Показать больше
            
            section.art_vidget-home__events.art_board.art_home-events
              .art_home-events__top.art_title-top ближайшие события
            
            section.art_vidget-home__interview.art_board.art_home-interview
              .art_home-interview__top.art_title-top  Опросы

            section.art_vidget-home__social.art_board.art_home-social
              .art_home-social__top.art_title-top Cоц. сети
